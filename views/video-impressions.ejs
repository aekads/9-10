<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Impressions</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    .controls {
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <h1>Video Impressions</h1>

  <div class="controls">
    <label for="nameFilter">Filter by Name:</label>
    <select id="nameFilter">
      <option value="all">All</option>
      <% 
        // Create a unique list of names dynamically from the data
        const uniqueNames = [...new Set(data.map(row => row.name))];
        uniqueNames.forEach(name => { 
      %>
        <option value="<%= name %>"><%= name %></option>
      <% }) %>
    </select>
  </div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Video ID</th>
        <th>Screen ID</th>
        <th>Device ID</th>
        <th>Name</th>
        <th>Count</th>
        <th>Duration</th>
        <th>Timestamp</th>
        <th>Uploaded Time Timestamp</th>
        <th>Video Tag</th>
        <th>Uploaded Date</th>
      </tr>
    </thead>
    <tbody id="tableBody">
      <% data.forEach(row => { %>
        <tr data-name="<%= row.name %>" data-screen-id="<%= row.screen_id %>">
          <td><%= row.id %></td>
          <td><%= row.type %></td>
          <td><%= row.video_id %></td>
          <td><%= row.screen_id %></td>
          <td><%= row.device_id %></td>
          <td><%= row.name %></td>
          <td><%= row.count %></td>
          <td><%= row.duration %></td>
          <td><%= row.timestamp %></td>
          <td><%= row.uploaded_time_timestamp %></td>
          <td><%= row.video_tag %></td>
          <td><%= row.uploaded_date %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    // Dropdown filter logic
    const nameFilter = document.getElementById('nameFilter');
    const tableBody = document.getElementById('tableBody');
    const rows = Array.from(tableBody.querySelectorAll('tr'));

    nameFilter.addEventListener('change', () => {
      const selectedName = nameFilter.value;
      rows.forEach(row => {
        const rowName = row.dataset.name;
        row.style.display = (selectedName === 'all' || rowName === selectedName) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
