<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Impressions</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    .chart-container, .calendar-container {
      margin: 20px auto;
      width: 80%;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Video Impressions</h1>

  <!-- Line Chart -->
  <div class="chart-container">
    <canvas id="lineChart"></canvas>
  </div>

  <!-- Calendar -->
  <div class="calendar-container">
    <div id="calendar"></div>
  </div>

  <!-- Video Table -->
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Video ID</th>
        <th>Screen ID</th>
        <th>Device ID</th>
        <th>Name</th>
        <th>Count</th>
        <th>Duration</th>
        <th>Timestamp</th>
        <th>Uploaded Time Timestamp</th>
        <th>Video Tag</th>
        <th>Uploaded Date</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(row => { %>
        <tr>
          <td><%= row.id %></td>
          <td><%= row.type %></td>
          <td><%= row.video_id %></td>
          <td><%= row.screen_id %></td>
          <td><%= row.device_id %></td>
          <td><%= row.name %></td>
          <td><%= row.count %></td>
          <td><%= row.duration %></td>
          <td><%= row.timestamp %></td>
          <td><%= row.uploaded_time_timestamp %></td>
          <td><%= row.video_tag %></td>
          <td><%= row.uploaded_date %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    // Line Chart Data
    const ctx = document.getElementById('lineChart').getContext('2d');
    const chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: `<%= JSON.stringify(data.map(row => row.uploaded_date)) %>`, // Dates from data
        datasets: [{
          label: 'Video Views Count',
          data: `<%= JSON.stringify(data.map(row => row.count)) %>`, // Count from data
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 2,
          fill: false
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Video Views Over Time'
          }
        },
        scales: {
          x: {
            title: {
              display: true,
              text: 'Uploaded Date'
            }
          },
          y: {
            title: {
              display: true,
              text: 'View Count'
            },
            beginAtZero: true
          }
        }
      }
    });

    // Calendar Initialization
    document.addEventListener('DOMContentLoaded', function () {
      const calendarEl = document.getElementById('calendar');
      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: `<%= JSON.stringify(data.map(row => ({
          title: row.name,
          start: row.uploaded_date
        }))) %>`
      });
      calendar.render();
    });
  </script>
</body>
</html>
